@using Sem3_2.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Manage Account Information";
    ViewBag.Target = "#nav";
    ViewBag.Container = "container";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div class="row">
    <div class="col-md-12">
        @if (ViewBag.HasLocalPassword)
        {
            @Html.Partial("_ChangeInfoPartial")
        }
        else
        {
            @Html.Partial("_SetPasswordPartial")
        }
        <a href="@Url.Action("Manage","Account")">Change Password</a>
        <section id="externalLogins">
            @Html.Action("RemoveAccountList")
            @Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })
        </section>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
